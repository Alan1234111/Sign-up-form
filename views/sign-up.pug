doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(defer src='/javascripts/script.js')
  body

  div(class='side-hero')
    div(class="logo")
      img(src="images/logo.png")
      h1 Foresting

  div(class="form-section")
    header(class="header")
      h2 This is not a real online service! You know you need something like this in your live to help you realize your deppest dreams. Sign up now to get started.
      p You know you want to.

    div(class='input-section')
      div(class="form-information")
        p(class="form-information__incentive") Let's do this!
        p(class="form-information__required") Fields marked with an asterisk (*) are required

        if errors
          ul.errors
            each error in errors
              li.error= error.msg        

      form#create-account(method="POST" action='' class='create-account')
        div(class='create-account-input')
          input#username(type="text" value="" name="username" placeholder="Username *" pattern="^[^0-9]+$" size="30" minlength="3" maxlength="245" required)
          label(for='username' data-help="Â¿Are you 11 from Stranger Things?") Username
        div(class='create-account-input')
          input#mail(placeholder="Email *" name="email" type="email" value="" size="30" maxlength="245" required)
          label(for="mail" data-help="Format email@email.com") Email 


        div(class="create-account-input input-password")
          input#password(placeholder="Password *" name="password" type="password" value="" size="30" maxlength="245" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}$")
          label(for='password' data-help="Check password requirements") Password
          ul(class='requirements')
            li(class='invalid' data-requirement="lower-case") One lowercase letter
            li(class='invalid' data-requirement="upper-case") One uppercase letter
            li(class='invalid' data-requirement="numeric-value") One numeric value
            li(class='invalid' data-requirement="special-symbol") One special symbol
            li(class='invalid' data-requirement="length") Length 8-16
        

        div(class='create-account-input')
          input#confirm-password(placeholder="Confirm Password *" name="confirm-password" type="password" value="" size="30" maxlength="245" required)
          label(for='confirm-password' data-help="Password do not match") Confirm password
  
    div(class='submit-section')
      button(type="submit" form='create-account') Create account 
      p
        |  Already have an account? 
        a(href="/log-in") Log in



